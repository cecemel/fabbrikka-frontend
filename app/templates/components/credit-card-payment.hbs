<div class='row'>
    <div class='col s12'>
        {{#unless cardMounted}}
            {{fabb-spinner}}
        {{/unless}}
            <label for="card-element">
              Your credit card data
            </label>
            <div id="credit-card-element">
              <!-- a Stripe Element will be inserted here. -->
            </div>
            <!-- Used to display form errors -->
            <div id="credit-card-errors"></div>
    </div>
</div>
<div class="row" style="min-height: 30px">
    <div class='col s3'>
        {{#if isSubmittingPayment}}
            {{fabb-spinner}}
        {{/if}}
    </div>
    <div class='col s9'>
        <a class="waves-effect waves-light btn right" {{action 'submitPayment'}}>{{t "components.credit-card-payment.submit"}}</a>
    </div>
</div>
{{yield}}
