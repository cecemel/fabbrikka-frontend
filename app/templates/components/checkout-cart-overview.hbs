{{fabb-max-free-tries-reached-modal status=displayModalMaxFreeTriesReached locale=locale}}
<ul class="collapsible" data-collapsible="accordion">
    <li>
        <div class="collapsible-header"><i class="material-icons">shopping_basket</i>{{t "components.checkout-cart-overview.items-overview"}}</div>
        <div class="collapsible-body">
            {{#each cartService.cart.shoppingCartItems as |row|}}
                {{shopping-cart-overview-item item=row handleMaxFreeTriesReached=(action 'handleMaxFreeTriesReached')}}
                <div class="row">
                  <div class="divider"></div>
                </div>
            {{/each}}
        </div>
    </li>
</ul>
<blockquote>
  {{#if isFreeTryOutAllowed}}
    <b> {{t "components.checkout-cart-overview.free-try"}}: </b> {{totalFreeTries}} {{#link-to 'free-try-out-rules' class="green-text text-darken-2"}}<i class="material-icons">help_outline</i>{{/link-to}} <br>
  {{/if}}
    <b> {{t "components.checkout-cart-overview.shipping"}}: </b> {{t "components.checkout-cart-overview.shipping-amount"}} <br>
    <b>{{t "components.checkout-cart-overview.total"}}: </b> <b> {{total}} </b> euro
</blockquote>
