  <div class="row">
  	<div class="col s12 m12 l8">
        {{#if media.isS}}
            {{#swiper-container updateFor=images pagination=true slidesPerView=1 spaceBetween=0 centered=true loop=true}}
                {{#each images as |image|}}
                    {{#swiper-slide }}<img  class='product-details-caroussel' src={{image.accessURL}}/>{{/swiper-slide}}
                {{/each}}
            {{/swiper-container}}
        {{else}}
    	  	{{#swiper-container updateFor=images pagination=true slidesPerView=2 spaceBetween=3 centered=true loop=true}}
    	  		{{#each images as |image|}}
    	  			{{#swiper-slide }}<img  class='product-details-caroussel' src={{image.accessURL}}/>{{/swiper-slide}}
        		{{/each}}
      		{{/swiper-container}}
        {{/if}}
  	</div>
  	<div class="col s12 m12 l4">
    {{#if isPageReady}}
        <h3>{{name}}</h3>
        <p> {{{description}}} </p>
        <h4>{{price}}</h4>
        {{#md-select optionLabelPath="content.name" optionValuePath="content.id" value=selectedSizeId  content=uniqueSizes prompt=(t "components.product-details.choose-size")}} {{/md-select}}
        <a class="waves-effect waves-light btn" {{action 'addToCart'}}>{{t "components.product-details.add-to-cart"}}</a>
        {{#link-to 'shopping-cart' class="detail-go-to-cart right waves-effect waves-light btn scale-transition scale-out red"}}{{t "components.product-details.go-to-cart"}}{{/link-to}}
    {{else}}
        {{fabb-spinner}}
    {{/if}}
	</div>
  </div>
