<h2 class="header">{{t "templates.shopping-cart.checkout.checkout"}}</h2>

<div class="row">
    <div class="col s12 l6 m12">
        <h4>{{t "templates.shopping-cart.checkout.delivery-address"}}</h4>
        {{md-input value=model.name label=(t "templates.shopping-cart.checkout.name")
            icon="face" class="col s12" validate=true errors=errors.name}}

        {{md-input value=model.email label=(t "templates.shopping-cart.checkout.email")
            icon="email" class="col s12" validate=true errors=errors.email}}

        {{md-input value=model.street label=(t "templates.shopping-cart.checkout.street")
                icon="home" class="col s8 m10" validate=true errors=errors.street}}

        {{md-input value=model.houseNumber label=(t "templates.shopping-cart.checkout.number-bus")
                            class="col s4 m2 right" validate=true errors=errors.houseNumber}}

        {{place-autocomplete-field value=model.city
            class='col s8  m8' label=(t "templates.shopping-cart.checkout.city-country")
            placeChangedCallback=(action "handleGoogleAddressUpdate")
            validate=true errors=errors.city icon="location_city"
       }}

        {{md-input value=model.zip label=(t "templates.shopping-cart.checkout.zip")
                                class="col s4 m4 right" validate=true errors=errors.zip}}

    </div>
    <div class="col s12 l6 m12">
        <h4>{{t "templates.shopping-cart.checkout.order-summary"}}</h4>
        {{checkout-cart-overview}}

        <h4>{{t "templates.shopping-cart.checkout.payment"}}</h4>
        {{#md-select optionLabelPath="content.name" optionValuePath="content.value" value=chosenPaymentMethod
            content=paymentMethods prompt=(t "templates.shopping-cart.checkout.payment-prompt") }}
        {{/md-select}}

        {{#if (equal-strings chosenPaymentMethod "visa")}}
            {{credit-card-payment onPay=(action 'onSubmitPayment') onPayError=(action 'onSubmitPaymentError')}}
        {{/if}}
        {{#if (equal-strings chosenPaymentMethod "bancontact")}}
            {{bancontact-payment}}
        {{/if}}
    </div>
</div>
{{error-modal status=hasBackendError title=(t "templates.shopping-cart.checkout.error-title") message=backendErrorText}}




{{outlet}}
